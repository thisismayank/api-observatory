{
  "name": "api-observatory",
  "version": "1.0.0",
  "description": "API Traffic Metrics & Latency Percentiles â€” zero-dependency core with Express, Fastify, and Koa adapters",
  "author": "thisismayank",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build": "npm run build:esm && npm run build:cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "express": ">=4.0.0",
    "fastify": ">=4.0.0",
    "koa": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "koa": {
      "optional": true
    }
  },
  "devDependencies": {
    "@koa/router": "^12.0.1",
    "@types/express": "^4.17.21",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "express": "^4.18.2",
    "fastify": "^4.26.0",
    "git-ship": "^0.2.1",
    "koa": "^2.15.0",
    "supertest": "^6.3.4",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thisismayank/api-observatory.git"
  },
  "keywords": [
    "api",
    "metrics",
    "latency",
    "percentiles",
    "p95",
    "p99",
    "monitoring",
    "observatory",
    "express",
    "fastify",
    "koa",
    "dashboard"
  ]
}
